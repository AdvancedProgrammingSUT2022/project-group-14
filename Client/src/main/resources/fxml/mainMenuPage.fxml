      <Button layoutX="145.0" layoutY="300.0" onMouseClicked="#goToProfileMenu" text="profile" />
      <Button layoutX="145.0" layoutY="360.0" onMouseClicked="#goToScoreboard" text="scoreboard" />
      <Button layoutX="145.0" layoutY="420.0" onMouseClicked="#goToChatroom" text="chatroom" />
      <Button layoutX="145.0" layoutY="480.0" onMouseClicked="#logout" text="logout" />
