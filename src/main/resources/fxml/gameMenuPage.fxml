<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="gameMenuScene" prefHeight="720" prefWidth="1280" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="views.StartGameMenuController">
    <ScrollPane hbarPolicy="NEVER" prefHeight="590.0" prefWidth="400.0" vbarPolicy="NEVER">
        <AnchorPane prefHeight="720" prefWidth="520"/>
        <VBox fx:id="invitationsVBox" alignment="CENTER" layoutX="25.0" layoutY="229.0" prefHeight="50.0"
              prefWidth="472.0" spacing="3"/>
    </ScrollPane>
    <MenuButton fx:id="usernamesMenuButton" layoutX="884.0" layoutY="25.0" mnemonicParsing="false" prefHeight="35.0"
                prefWidth="225.0" text="Usernames"/>
    <Button layoutX="1116.0" layoutY="24.0" mnemonicParsing="false" onMouseClicked="#sendInvitations" prefHeight="36.0"
            prefWidth="360.0" text="Invite"/>
    <Button layoutX="50" layoutY="600" onMouseClicked="#backButtonClicked" text="Back"/>
    <Button layoutX="614.0" layoutY="236.0" mnemonicParsing="false" text="Load Game"/>
    <Button layoutX="614.0" layoutY="285.0" mnemonicParsing="false" text="Start Game" onMouseClicked="#startGameButtonClicked"/>
    <Text fill="ORANGE" layoutX="1046.0" layoutY="295.0" strokeType="OUTSIDE" strokeWidth="0.0"
          text="number of players " textAlignment="CENTER" wrappingWidth="166.0">
    </Text>
    <Spinner fx:id="numberOfPlayersSpinner" layoutX="1055.0" layoutY="303.0"/>
    <Text fill="ORANGE" layoutX="1046.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="map height"
          textAlignment="CENTER" wrappingWidth="166.0">
    </Text>
    <Text fill="ORANGE" layoutX="1046.0" layoutY="465.0" strokeType="OUTSIDE" strokeWidth="0.0" text="map width"
          textAlignment="CENTER" wrappingWidth="166.0">
    </Text>
    <Spinner fx:id="mapHeightSpinner" layoutX="1055.0" layoutY="388.0"/>
    <Spinner fx:id="mapWidthSpinner" layoutX="1055.0" layoutY="473.0"/>


</AnchorPane>
