<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="background" prefHeight="720" prefWidth="1280" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginPageController">

    <VBox layoutX="45" layoutY="350" prefHeight="270.0" prefWidth="345.0" spacing="10">
        <Text text="Username" />
        <TextField fx:id="usernameTextField" onKeyTyped="#resetTextField" promptText="Enter your username" />
        <Text text="Nickname" />
        <TextField fx:id="nicknameTextField" onKeyTyped="#resetTextField" promptText="Enter your nickname" />
        <Text text="Password" />
        <PasswordField fx:id="passwordTextField" onKeyTyped="#resetTextField" promptText="Enter your password" />
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="loginButton" onMouseClicked="#loginButtonClicked" text="Login" />
            <Button fx:id="registerButton" onMouseClicked="#registerButtonClicked" text="Register" />
        </HBox>
    </VBox>
</AnchorPane>
